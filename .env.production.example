# ============================================
# Alpicia Production Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit this file to version control!

# ============================================
# DATABASE (PostgreSQL with pgvector)
# ============================================
DATABASE_URL="postgresql://alpicia:changeme@postgres:5432/alpicia?schema=public"
POSTGRES_USER=alpicia
POSTGRES_PASSWORD=changeme
POSTGRES_DB=alpicia

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://redis:6379

# ============================================
# LLM CONFIGURATION
# ============================================
LLM_PROVIDER=claude
LLM_API_KEY=your_anthropic_api_key_here
LLM_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# OpenAI (for embeddings and TTS/STT)
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_PROVIDER=openai

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=generate_a_secure_32_char_minimum_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# MESSAGING PLATFORMS
# ============================================
TELEGRAM_ENABLED=false
TELEGRAM_TOKEN=

DISCORD_ENABLED=false
DISCORD_TOKEN=
DISCORD_GUILD_ID=

WS_ENABLED=true
WS_PORT=3001

SLACK_ENABLED=false
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# ============================================
# API SERVER
# ============================================
NODE_ENV=production
API_PORT=3000
API_BASE_URL=https://your-domain.com

# ============================================
# SECURITY
# ============================================
SANDBOX_ENABLED=false
ALLOWED_COMMANDS=ls,cat,grep,echo,date,pwd,whoami
BLOCKED_COMMANDS=rm,del,format,mkfs,dd,sudo,su,ssh
MAX_FILE_SIZE=10485760
ENCRYPTION_KEY=generate_a_secure_32_char_encryption_key

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# ============================================
# MEMORY & STORAGE
# ============================================
MEMORY_TYPE=postgres
MEMORY_PATH=/app/memory
MEMORY_MAX_ENTRIES=10000
MEMORY_SEARCH=true

# ============================================
# BROWSER AUTOMATION
# ============================================
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADLESS=true

# ============================================
# WORKFLOWS & SCHEDULING
# ============================================
SCHEDULER_ENABLED=true

# ============================================
# ANALYTICS & MONITORING
# ============================================
ANALYTICS_ENABLED=true
LOG_LEVEL=info
METRICS_ENABLED=true
METRICS_PORT=9090

# ============================================
# PLUGINS
# ============================================
PLUGINS_ENABLED=true

# ============================================
# EMAIL (Optional)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# EMAIL_FROM=Alpicia <noreply@your-domain.com>

# ============================================
# OAUTH (Optional)
# ============================================
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# DISCORD_CLIENT_ID=
# DISCORD_CLIENT_SECRET=
