{
  "name": "sentinelbot",
  "version": "1.0.0",
  "description": "AI personal assistant with multi-platform messaging, browser automation, and memory persistence",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:cli": "tsx src/index.ts cli",
    "dev:api": "tsx src/index.ts api",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "tsx src/init-db.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force"
  },
  "keywords": [
    "ai",
    "assistant",
    "telegram",
    "discord",
    "automation",
    "agent",
    "multi-agent",
    "workflow",
    "browser-automation",
    "personal-assistant",
    "openai-compatible",
    "claude",
    "ollama"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/sentinelbot.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/sentinelbot/issues"
  },
  "homepage": "https://github.com/yourusername/sentinelbot#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@prisma/client": "^5.10.0",
    "@slack/web-api": "^7.0.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.6.2",
    "bullmq": "^5.1.0",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "discord.js": "^14.14.0",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "googleapis": "^134.0.0",
    "grammy": "^1.21.0",
    "imapflow": "^1.0.140",
    "ioredis": "^5.3.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "mysql2": "^3.9.1",
    "nodemailer": "^6.9.10",
    "openai": "^4.28.0",
    "playwright": "^1.42.0",
    "prom-client": "^15.1.0",
    "simple-git": "^3.24.0",
    "uuid": "^9.0.0",
    "ws": "^8.16.0",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/imapflow": "^1.0.18",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "prisma": "^5.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
