# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/alpicia?schema=public"

# ============================================
# LLM CONFIGURATION
# ============================================
LLM_PROVIDER=claude
LLM_API_KEY=your_anthropic_api_key_here
LLM_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# OpenAI (for embeddings and TTS/STT)
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_PROVIDER=openai

# Ollama (local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# ============================================
# MESSAGING PLATFORMS
# ============================================
TELEGRAM_ENABLED=false
TELEGRAM_TOKEN=your_telegram_bot_token_here

DISCORD_ENABLED=false
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# WebSocket
WS_ENABLED=true
WS_PORT=3001

# Slack
SLACK_ENABLED=false
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your_signing_secret
SLACK_APP_TOKEN=xapp-your-app-token

# ============================================
# API SERVER
# ============================================
API_PORT=3000
API_HOST=localhost
API_BASE_URL=http://localhost:3000

# OpenAI-Compatible API
OPENAI_API_ENABLED=true
OPENAI_API_PORT=3002

# ============================================
# MEMORY & STORAGE
# ============================================
MEMORY_TYPE=postgres
MEMORY_PATH=./memory
MEMORY_MAX_ENTRIES=10000
MEMORY_SEARCH=true
MEMORY_DECAY_ENABLED=true
MEMORY_DECAY_RATE=0.01

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379

# ============================================
# SECURITY
# ============================================
SANDBOX_ENABLED=false
ALLOWED_COMMANDS=ls,cat,grep,echo,date,pwd,whoami
BLOCKED_COMMANDS=rm,del,format,mkfs,dd
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW=900000
AUTH_RATE_LIMIT_MAX=5

# Encryption
ENCRYPTION_KEY=your_32_char_encryption_key_here

# ============================================
# BROWSER AUTOMATION
# ============================================
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADLESS=true

# ============================================
# INTEGRATIONS
# ============================================

# Google Calendar
GOOGLE_CALENDAR_ENABLED=false
GOOGLE_CALENDAR_CREDENTIALS=./credentials/google-calendar.json

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
EMAIL_FROM=Alpicia <noreply@alpicia.dev>

# Resend (alternative to SMTP)
RESEND_API_KEY=re_your_resend_api_key

# SendGrid (alternative to SMTP)
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Voice (OpenAI TTS/Whisper)
VOICE_ENABLED=true
VOICE_PROVIDER=openai
TTS_VOICE=alloy
TTS_MODEL=tts-1

# ElevenLabs (TTS)
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=rachel

# Sarvam AI (TTS/STT - Indian Languages)
SARVAM_API_KEY=your_sarvam_api_key
SARVAM_VOICE=musical

# Webhooks
WEBHOOK_SECRET=your_webhook_signing_secret
WEBHOOK_TIMEOUT=30000

# ============================================
# WORKFLOWS & SCHEDULING
# ============================================
SCHEDULER_ENABLED=true
SCHEDULER_POLL_INTERVAL=10000

# ============================================
# PLUGINS
# ============================================
PLUGINS_DIR=./plugins
PLUGINS_ENABLED=true

# ============================================
# ANALYTICS & MONITORING
# ============================================
ANALYTICS_ENABLED=true
LOG_LEVEL=info

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Sentry (optional)
SENTRY_DSN=

# ============================================
# FILE STORAGE
# ============================================
STORAGE_PROVIDER=local
UPLOAD_PATH=./uploads
MAX_UPLOAD_SIZE=52428800

# AWS S3 (if STORAGE_PROVIDER=s3)
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# ============================================
# DATABASE CONNECTIONS
# ============================================
# MySQL (optional)
MYSQL_URL=mysql://user:password@localhost:3306/alpicia

# ============================================
# DEVELOPMENT
# ============================================
NODE_ENV=development
DEBUG=false
