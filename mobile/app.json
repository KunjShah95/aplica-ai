{
  "expo": {
    "name": "SentinelBot",
    "slug": "sentinelbot",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sentinelbot.app",
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "SentinelBot uses speech recognition to convert your voice to text.",
        "NSMicrophoneUsageDescription": "SentinelBot uses the microphone for voice commands."
      },
      "entitlements": {
        "com.apple.developer.siri": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "com.sentinelbot.app",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.SPEECH_RECOGNITION",
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "favicon": "./src/assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SentinelBot to access your camera."
        }
      ],
      [
        "expo-speech",
        {
          "microphonePermission": "Allow SentinelBot to access your microphone."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/your-project-id"
    }
  }
}
